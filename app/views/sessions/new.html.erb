<% provide(:title, "Sign in") %>
<h1 class='text-center'>Sign in</h1>

<%= form_for(:session, url: signin_path) do |form| %>
  <div class="col-md-6 offset-md-3">

    <div class="form-group">
      <%= form.label :email, class: 'font-weight-bold' %>
      <%= form.text_field :email, type: 'email', id: :user_email,
                                  class: 'form-control',
                                  placeholder: 'Enter Email' %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'font-weight-bold' %>
      <%= form.password_field  :password, id: :user_password,
                                          class: 'form-control',
                                          placeholder: 'Enter Password' %>
    </div>

    <div class="text-center">
      <%= form.submit 'Sign in', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
