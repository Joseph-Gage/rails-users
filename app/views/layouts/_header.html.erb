<header >
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Ideaz</a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to 'Home',   '#', class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to 'Help', '#', class: 'nav-link' %></li>
      <% if signed_in? %>
        <li class="nav-item dropdown">             
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Account
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", current_user, class: 'dropdown-item' %>
            <%= link_to "Settings", edit_user_path(current_user), class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to "Sign out", signout_path, method: :delete, class: 'dropdown-item' %>
         </div> 
        </li>
      <% else %>
        <li><%= link_to "Sign in", signin_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </nav>
</header>
