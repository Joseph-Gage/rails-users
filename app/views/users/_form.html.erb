<%= form_with(model: user, local: true) do |form| %>
  <div class="col-md-6 offset-md-3">
    <%= render 'shared/error_messages' %>

    <div class="form-group">
      <%= form.label :name, 'Username', class: 'font-weight-bold' %>
      <%= form.text_field :name, id: :user_name,
                                 class: 'form-control',
                                 placeholder: 'Enter Username' %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'font-weight-bold' %>
      <%= form.text_field :email, type: 'email', id: :user_email,
                                  class: 'form-control',
                                  placeholder: 'Enter Email' %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'font-weight-bold' %>
      <%= form.password_field  :password, id: :user_password,
                                          class: 'form-control',
                                          placeholder: 'Enter Password' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, 'Confirmation', class: 'font-weight-bold' %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation,
                                                      class: 'form-control',
                                                      placeholder: 'Confirm Password' %>
    </div>

    <div class="text-center">
      <%= form.submit 'Create my Account', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
